    <Grid>
        <Grid>
            <Rectangle RadiusX="20" RadiusY="20" Fill="#1f2022"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="*"/>
