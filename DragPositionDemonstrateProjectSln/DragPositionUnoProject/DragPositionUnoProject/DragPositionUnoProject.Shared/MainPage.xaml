<Page x:Class="DragPositionUnoProject.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:dragAPs="using:DragPosition"
      
      xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:not_win="http://uno.ui/not_win"
      
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:data="using:DragPositionUnoProject.Data"
      mc:Ignorable=""
      
      DataContext="{Binding ViewModel, RelativeSource={win:RelativeSource Mode=Self}}">

    <Grid>
        <ItemsControl Name="baseListView" ItemsSource="{Binding Types}">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas Background="Transparent"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>

                    <Border Background="Red" Width="100" Height="100"
                            data:Canvas.OffsetX="{Binding PositionX}"
                            data:Canvas.OffsetY="{Binding PositionY}"
                            dragAPs:DragPosition.IsDrop="True"/>

                </DataTemplate>
            </ItemsControl.ItemTemplate>
Убран        </ItemsControl>

    </Grid>

</Page>
